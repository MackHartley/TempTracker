<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TitleText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SubtitleText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor"></item>
    </style>

    <style name="ChartNoDataTitle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ChartNoDataDesc">
        <item name="android:layout_marginStart">36dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">36dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="PickerDialogTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">@color/purple_700</item>
        <item name="android:windowBackground">@color/purple_700</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PickerDialogButtonTheme</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/PickerDialogButtonTheme</item>
    </style>

    <style name="PickerDialogButtonTheme" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/purple_700</item>
    </style>

    <style name="DateTimeSelectionText">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:textSize">16sp</item>
    </style>


</resources>